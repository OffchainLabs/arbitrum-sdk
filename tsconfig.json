{
  "compilerOptions": {
    "target": "ES2017",
    "module": "commonjs",
    "declaration": true,
    "rootDir": "./src",
    "outDir": "./dist",
    "strict": true,
    "allowJs": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "strictNullChecks": true,
    "noImplicitThis": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "skipLibCheck": true,
  },
  "include": [
    "./**/*.ts",
    "./**/*.d.ts",
    "./**/*.js"
  ],
  "exclude": [
    "node_modules",
    "node_modules/abitype/**",
    "node_modules/viem/**"
  ]
}